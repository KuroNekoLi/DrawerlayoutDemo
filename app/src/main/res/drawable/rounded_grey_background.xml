<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/menu_item_selected_bg"/>
            <corners android:bottomLeftRadius="25dp" android:topLeftRadius="25dp" />
        </shape>
    </item>

    <!-- Yellow stripe on the right -->
    <item android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_yellow"/>
            <corners android:bottomLeftRadius="0dp" android:topLeftRadius="0dp" />
        </shape>
    </item>
</layer-list>
