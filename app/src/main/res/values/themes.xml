<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DrawerlayoutDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowBackground">@color/atsc_black_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/atsc_black_bg</item>

        <!-- Customize your theme here. -->
    </style>



    <style name="MyNavigationViewStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="colorPrimary">#606a82</item>
        <item name="itemIconTint">@color/selector_menu_item_text</item>
        <item name="itemTextColor">@color/selector_menu_item_text</item>
        <item name="itemTextAppearance">@style/MyNavigationDrawerTextStyle</item>
        <item name="itemBackground">@drawable/nav_item_background_selector</item>
    </style>

    <style name="MyNavigationDrawerTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

</resources>